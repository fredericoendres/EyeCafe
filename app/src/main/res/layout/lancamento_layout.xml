<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lancamento_layout"
    android:layout_width="300dp"
    android:layout_height="400dp"
    android:layout_gravity="center"
    android:background="@drawable/round_background"
    android:elevation="10dp"
    android:paddingHorizontal="24dp"
    android:paddingBottom="24dp">

    <TextView
        android:id="@+id/title_lancamento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        style="@style/MainTitle"
        android:gravity="top"
        android:text="Lançando Item"
        android:layout_marginTop="25dp"
        app:layout_constraintBottom_toTopOf="@+id/shapeableImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/shapeableImageView"
        android:layout_marginBottom="15dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ovos"
        app:layout_constraintBottom_toTopOf="@+id/quant_title"
        app:layout_constraintStart_toStartOf="parent"
        app:shapeAppearanceOverlay="@style/roundedImageViewRounded" />

    <TextView
        android:id="@+id/product_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="10dp"
        android:text="@string/product_placeholder"
        android:textAlignment="textStart"
        style="@style/SmallText"
        app:layout_constraintBottom_toTopOf="@+id/product_price"
        app:layout_constraintStart_toEndOf="@+id/shapeableImageView"
        app:layout_constraintTop_toBottomOf="@+id/title_lancamento" />

    <TextView
        android:id="@+id/product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/MediumBold"
        android:text="@string/price_placeholder"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="15dp"
        android:textAlignment="textStart"
        app:layout_constraintBottom_toTopOf="@+id/quant_title"
        app:layout_constraintStart_toEndOf="@+id/shapeableImageView" />

    <View
        android:layout_width="73dp"
        android:layout_height="0.5dp"
        android:layout_marginBottom="30dp"
        android:background="@color/marrom"
        app:layout_constraintBottom_toTopOf="@+id/qnt_add"
        app:layout_constraintStart_toStartOf="parent"/>

    <View
        android:layout_width="73dp"
        android:layout_height="0.5dp"
        android:layout_marginBottom="30dp"
        android:background="@color/marrom"
        app:layout_constraintBottom_toTopOf="@+id/qnt_add"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/quant_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:layout_marginBottom="24dp"
        android:text="Quantidade"
        android:textAlignment="center"
        style="@style/SecondaryTitle"
        app:layout_constraintBottom_toTopOf="@+id/qnt_counter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/qnt_add"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/round"
        android:backgroundTint="@color/marrom"
        android:gravity="center"
        android:text="+"
        style="@style/MainTitle"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/total_text"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toEndOf="@+id/qnt_counter" />

    <Button
        android:id="@+id/qnt_sub_limpar"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/round"
        android:backgroundTint="@color/marrom"
        android:gravity="center"
        android:text="-"
        style="@style/MainTitle"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/total_text"
        app:layout_constraintEnd_toStartOf="@+id/qnt_counter"/>

    <Button
        android:id="@+id/qnt_counter"
        android:layout_width="54dp"
        android:layout_height="36dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/round_background"
        android:backgroundTint="@color/marrom_light"
        android:gravity="center"
        android:text="4"
        style="@style/SmallText"
        app:layout_constraintBottom_toTopOf="@+id/total_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/total_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total: R$ 100,00"
        style="@style/MediumBold"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/observation_text"
        android:layout_marginBottom="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/observation_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="@string/observacao"
        style="@style/SecondaryTitle"
        app:layout_constraintBottom_toTopOf="@+id/editText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/round_background"
        android:backgroundTint="@color/marrom_light"
        android:padding="16dp"
        style="@style/SmallText"
        android:autofillHints="Digite aqui sua observação"
        app:layout_constraintBottom_toTopOf="@+id/btn_ok"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_cancelar"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:background="@drawable/round_background"
        android:backgroundTint="@color/marrom_light"
        android:text="@string/voltar_text"
        style="@style/SmallBold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:background="@drawable/round_background"
        android:backgroundTint="@color/marrom"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/adicionar_text"
        style="@style/SmallBold"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>