<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lancamento_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent">


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/round_background"
    android:elevation="10dp"
    android:paddingHorizontal="18dp"
    android:paddingBottom="30dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent">

    <TextView
        android:id="@+id/title_lancamento"
        style="@style/MainTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:textAlignment="center"
        android:text="Percentual do desconto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/discount_value"/>

    <TextView
        android:id="@+id/discount_value"
        style="@style/NumPad"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="10%"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/qnt_sub1"
        app:layout_constraintTop_toBottomOf="@+id/title_lancamento" />

    <Button
        android:id="@+id/qnt_sub0"
        style="@style/NumPad"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/round"
        android:backgroundTint="@color/marrom_light"
        android:gravity="center"
        android:text="0"
        android:textColor="@color/marrom"
        app:layout_constraintBottom_toTopOf="@+id/btn_ok"
        app:layout_constraintEnd_toStartOf="@+id/qnt_sub_delete"
        app:layout_constraintStart_toEndOf="@+id/qnt_sub" />

    <Button
        android:id="@+id/qnt_sub"
        style="@style/MediumText"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/round"
        android:backgroundTint="@color/marrom_light"
        android:gravity="center"
        android:text="LIMPAR"
        android:textColor="@color/marrom"
        app:layout_constraintBottom_toTopOf="@+id/btn_cancelar"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/qnt_sub7"
        style="@style/NumPad"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="9dp"
        android:background="@drawable/round"
        android:backgroundTint="@color/marrom_light"
        android:gravity="center"
        android:text="7"
        android:textColor="@color/marrom"
        app:layout_constraintBottom_toTopOf="@+id/qnt_sub"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/qnt_sub9"
        style="@style/NumPad"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="9dp"
        android:background="@drawable/round"
        android:backgroundTint="@color/marrom_light"
        android:gravity="center"
        android:text="9"
        android:textColor="@color/marrom"
        app:layout_constraintBottom_toTopOf="@+id/qnt_sub_delete"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/qnt_sub6"
        style="@style/NumPad"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="9dp"
        android:background="@drawable/round"
        android:backgroundTint="@color/marrom_light"
        android:gravity="center"
        android:text="6"
        android:textColor="@color/marrom"
        app:layout_constraintBottom_toTopOf="@+id/qnt_sub9"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/qnt_sub3"
        style="@style/NumPad"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="9dp"
        android:background="@drawable/round"
        android:backgroundTint="@color/marrom_light"
        android:text="3"
        android:textColor="@color/marrom"
        app:layout_constraintBottom_toTopOf="@+id/qnt_sub6"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/qnt_sub8"
        style="@style/NumPad"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="9dp"
        android:background="@drawable/round"
        android:backgroundTint="@color/marrom_light"
        android:text="8"
        android:textColor="@color/marrom"
        app:layout_constraintBottom_toTopOf="@+id/qnt_sub0"
        app:layout_constraintEnd_toStartOf="@+id/qnt_sub9"
        app:layout_constraintStart_toEndOf="@+id/qnt_sub7" />

    <Button
        android:id="@+id/qnt_sub5"
        style="@style/NumPad"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="9dp"
        android:background="@drawable/round"
        android:backgroundTint="@color/marrom_light"
        android:text="5"
        android:textColor="@color/marrom"
        app:layout_constraintBottom_toTopOf="@+id/qnt_sub8"
        app:layout_constraintEnd_toStartOf="@+id/qnt_sub6"
        app:layout_constraintStart_toEndOf="@+id/qnt_sub4" />

    <Button
        android:id="@+id/qnt_sub2"
        style="@style/NumPad"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="9dp"
        android:background="@drawable/round"
        android:backgroundTint="@color/marrom_light"
        android:layout_marginHorizontal="8dp"
        android:text="2"
        android:textColor="@color/marrom"
        app:layout_constraintBottom_toTopOf="@+id/qnt_sub5"
        app:layout_constraintEnd_toStartOf="@+id/qnt_sub3"
        app:layout_constraintStart_toEndOf="@+id/qnt_sub1" />

    <Button
        android:id="@+id/qnt_sub4"
        style="@style/NumPad"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="9dp"
        android:background="@drawable/round"
        android:backgroundTint="@color/marrom_light"
        android:gravity="center"
        android:text="4"
        android:textColor="@color/marrom"
        app:layout_constraintBottom_toTopOf="@+id/qnt_sub7"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/qnt_sub1"
        style="@style/NumPad"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="9dp"
        android:background="@drawable/round"
        android:backgroundTint="@color/marrom_light"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/marrom"
        app:layout_constraintBottom_toTopOf="@+id/qnt_sub4"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/qnt_sub_delete"
        style="@style/MediumText"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/round"
        android:backgroundTint="@color/marrom_light"
        android:gravity="center"
        android:src="@drawable/delete_icon"
        android:textColor="@color/marrom"
        app:layout_constraintBottom_toTopOf="@+id/btn_ok"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn_cancelar"
        style="@style/MediumText"
        android:layout_width="132dp"
        android:layout_height="53dp"
        android:background="@drawable/round_background"
        android:backgroundTint="@color/marrom_light"
        android:text="CANCELAR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_ok"
        style="@style/MediumText"
        android:layout_width="123dp"
        android:layout_height="53dp"
        android:background="@drawable/round_background"
        android:backgroundTint="@color/marrom"
        android:fontFamily="@font/montserrat_bold"
        android:text="OK"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

