<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/edit_layout"
    android:layout_width="121dp"
    android:layout_height="66dp"
    android:background="@drawable/round_background_small"
    android:backgroundTint="@color/marrom_light"
    android:padding="9dp">

    <TextView
        android:id="@+id/editProduct"
        style="@style/MediumText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="5dp"
        android:text="EDITAR"
        app:layout_constraintBottom_toBottomOf="@id/midbar"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/midbar"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/marrom"
        android:layout_marginTop="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/deleteProduct"
        style="@style/MediumText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EXCLUIR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="7dp"
        app:layout_constraintTop_toTopOf="@id/midbar" />

</androidx.constraintlayout.widget.ConstraintLayout>